<% count = 0 %>
<% comments.each do |comment| %>
<% break if feed == true && count > 1 %>
<% count += 1 %>
  <div class="comment">
    <strong><%= link_to comment.user.username, profile_path(:user_id => comment.user_id), class: "text-dark text-decoration-none" %></strong>
    <%= comment.comment %>
    <% if feed == false %>
      <p class="text-muted comment-time"><%= time_ago_in_words comment.created_at %> ago</p>
    <% end %>
  </div>
<% end %>
