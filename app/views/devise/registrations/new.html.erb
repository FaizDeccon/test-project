<div class="container">
  <div class="row">
    <div class="col-3 offset-2">
      <%= image_tag 'signup-image.png' %>
    </div>
    <div class="col-3 offset-2 border-around m-top-15">
      <h2 class="m-top-30 m-bot-30">Instagram</h2>

      <p class="alert-msg"><%= alert %></p>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group m-top-15">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
        </div>

        <div class="form-group m-top-15">
          <%= f.text_field :firstname, autocomplete: "firstname", class: "form-control", placeholder: "Firstname" %>
        </div>

        <div class="form-group m-top-15">
          <%= f.text_field :lastname, autocomplete: "lastname", class: "form-control", placeholder: "Lastname" %>
        </div>

        <div class="form-group m-top-15">
          <%= f.text_field :username, autocomplete: "username", class: "form-control", placeholder: "Username" %>
        </div>

        <div class="form-group m-top-15">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
        </div>

        <div class="from-group m-top-15">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm Password" %>
        </div>

        <div class="form-group m-top-15 m-bot-0">
          <%= f.submit "Sign up", class: "form-control btn btn-primary" %>
        </div>

        <div class="m-top-15">
          <%- if controller_name != 'sessions' %>
            Already have an account? <%= link_to "Log in", new_session_path(resource_name) %><br />
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
